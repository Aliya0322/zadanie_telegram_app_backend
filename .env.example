# Database Configuration
# Формат: postgresql://username:password@host:port/database_name
# Пример: postgresql://postgres:mypassword@localhost:5432/telegram_app_db
DATABASE_URL=postgresql://user:password@localhost:5432/telegram_app_db

# PostgreSQL Settings (для docker-compose)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=telegram_app_db

# Telegram Bot Configuration
# Получите токен бота у @BotFather в Telegram
BOT_TOKEN=your_bot_token_from_botfather

# Секретный ключ для проверки initData
# Обычно это тот же токен бота, но можно использовать отдельный секрет
BOT_SECRET=your_bot_secret_for_initdata_verification


# Server Configuration (опционально)
HOST=0.0.0.0
PORT=8000
